<dom-module id="surveys-view">
  <template>
    <mediator-data id="s" as-array="{{surveys}}" location="{{location}}" folder="[[folder]]" default-folder="{{defaultFolder}}"></mediator-data>
    <surveys-list edit="[[edit]]" answer="[[answer]]" edit-default="[[editDefault]]" surveys="{{surveys}}" on-delete-survey="deleteSurveyQuestion"></surveys-list>
    <template is="dom-if" if="{{edit}}">
      <survey-input on-add-survey="addSurveyQuestion"></survey-input>
    </template>
  </template>
</dom-module>
<script>
  Polymer({
    is: "surveys-view",
    properties: {
      surveys: Array,
      edit: Boolean,
      answer: Boolean,
      editDefault: Boolean
    },
    addSurveyQuestion: function(e) {
      this.$.s.push({
        question: e.detail.Q
      });
    },
    deleteSurveyQuestion: function(e) {
      this.arrayDelete('surveys', e.detail.surveyQuestion); //TODO e.detail.??
    },
    toggleView: function() {
      if (this.edit) this.admin = !this.admin;
    }
  });
</script>
